{{ $paginator := .Paginate (where .Data.Pages "Section" .Section) 15 }}
<div class="columns">
{{ range $paginator.Pages }}
  <figure class="column">
      <h3><a href="{{ .Permalink | replaceRE "[^/]*$" "" }}">{{ .Title }}</a></h3>
      {{ if .Params.menuImage }}
      <a href="{{ .Permalink | replaceRE "[^/]*$" "" }}"><img src="/static/images/loading-dots.gif" data-src="/static/images/{{ .Params.menuImage }}" alt="{{ .Title }} list"></a>
      {{ end }}
      <p>{{ .Description }}</p>
  </figure>
{{ end }}
</div>

